@model IEnumerable<Frigorifico.Models.Sucursal>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado Sucursales</h1>

<p>
    <a asp-action="Create">Crear nueva sucursal</a>
</p>
<p>
    <a href="@Url.Action("Index", "Home")">Inicio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSucursal">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdSucursal">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSucursal">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
